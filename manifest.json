{
  "manifest_version": 2,

  "name": "Reddit Your Way",
  "version": "1.0",
  "description": "Subreddit Browsing Made Simple",

  "browser_action": {
    "default_icon": "redditicon.png",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  
  "permissions": ["<all_urls>"]
}